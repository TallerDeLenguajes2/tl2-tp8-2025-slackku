@{
    ViewData["Title"] = "Listar Productos";
}
@model List<Producto>

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary-emphasis">Portal de Productos</h2>
        <a asp-controller="Productos" asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg"></i> Crear Producto
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th scope="col" class="ps-4" style="width: 60%;">Descripci√≥n</th>
                                <th scope="col" style="width: 20%;">Precio</th>
                                <th scope="col" class="text-center" style="width: 20%;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Producto prod in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-secondary">
                                        @prod.Descripcion
                                    </td>
                                    <td class="font-monospace text-dark">
                                        @prod.Precio.ToString("C") </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Productos" asp-action="Edit" asp-route-id="@prod.IdProducto"
                                               class="btn btn-sm btn-outline-primary" title="Editar">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-controller="Productos" asp-action="Delete" asp-route-id="@prod.IdProducto"
                                               class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center p-5 text-muted">
                    <i class="bi bi-box-seam display-4 mb-3"></i>
                    <p class="fs-5">No hay productos registrados en el sistema.</p>
                    <a asp-action="Create" class="btn btn-sm btn-primary">Agregar el primero</a>
                </div>
            }
        </div>
    </div>
</div>