@{
    ViewData["Title"] = "Listar Productos";
}
@model List<Producto>

<div>
    <a asp-controller="Producto" asp-action="Create" class="btn btn-primary">Crear</a>
</div>

<div class="container mt-4">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Descripci√≥n</th>
                <th>Precio</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Producto prod in Model){
                <tr>
                    <th>@prod.Descripcion</th>
                    <th>@prod.Precio</th>
                    <th>
                        <a asp-controller="Productos" asp-action="Edit" asp-route-id="@prod.IdProducto" class="btn btn-primary">Editar</a>
                    </th>
                    <th>
                        <a asp-controller="Productos" asp-action="Delete" asp-route-id="@prod.IdProducto" class="btn btn-danger">Eliminar</a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>