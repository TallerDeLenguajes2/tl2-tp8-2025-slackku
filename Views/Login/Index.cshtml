@model tl2_tp8_2025_slackku.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card login-card">
                <div class="login-header text-center mt-3">
                    <div class="login-icon">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <h3>Bienvenido</h3>
                    <p class="text-muted">Ingresa a tu cuenta</p>
                </div>

                <div class="card-body p-4">
                    <form asp-controller="Login" asp-action="Login" method="post">

                        <!-- Muestra errores generales de validación (ej. usuario no encontrado) -->
                        @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
                        {
                            <div class="alert alert-danger text-center small mb-3" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                @Model.ErrorMessage
                            </div>
                        }
                        <!-- Esto queda opcional por si usas validaciones de ModelState también -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center small"></div>

                        <!-- Email -->
                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control" placeholder="Usuario" />
                            <label asp-for="Username">Nombre de Usuario</label>
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" placeholder="Contraseña" type="password" />
                            <label asp-for="Password">Contraseña</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Checkbox -->
                        @* <div class="form-check mb-3 d-flex align-items-center">
                                <input asp-for="RememberMe" class="form-check-input me-2" />
                                <label asp-for="RememberMe" class="form-check-label text-secondary">
                                    Recordar dispositivo
                                </label>
                            </div> *@

                        <!-- Botón -->
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-primary-custom text-white" type="submit">
                                Ingresar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}