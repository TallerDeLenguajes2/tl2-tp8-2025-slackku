@{
    ViewData["Title"] = "Editar Presupuesto";
}

@model Presupuesto

<div class="d-flex flex-column p-3 mb-5">
    <div class="container mt-2 p-4 border rounded shadow-sm">

        <div class="d-flex flex-row gap-2 hstack mb-4">
            <h3>Editar Presupuesto</h3>
        </div>

        <form asp-action="Edit" method="post">

            <input type="hidden" asp-for="IdPresupuesto" />

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="NombreDestinatario" class="form-label fw-bold">Destinatario</label>
                    <input asp-for="NombreDestinatario" class="form-control" required />
                    <span asp-validation-for="NombreDestinatario" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="FechaCreacion" class="form-label fw-bold">Fecha</label>
                    <input asp-for="FechaCreacion" type="date" class="form-control" required />
                    <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                </div>
            </div>

            <hr class="mb-4" />

            <h5 class="text-secondary mb-3">Detalle de Productos</h5>

            @if (Model.Detalle != null && Model.Detalle.Any())
            {
                @for (int i = 0; i < Model.Detalle.Count; i++)
                {
                    <div class="card mb-3 bg-light border-secondary-subtle">
                        <div class="card-header d-flex justify-content-between align-items-center py-2">
                            <small class="fw-bold text-secondary">√çtem @(i + 1)</small>
                            <a asp-action="EliminarDetalle" asp-route-idPresupuesto="@Model.IdPresupuesto"
                                asp-route-idProducto="@Model.Detalle[i].Producto.IdProducto"
                                class="btn btn-sm btn-outline-danger" title="Quitar producto">
                                <i class="bi bi-trash"></i> Quitar
                            </a>
                        </div>

                        <div class="card-body">
                            <input type="hidden" name="Detalle[@i].Producto.IdProducto"
                                value="@Model.Detalle[i].Producto.IdProducto" />

                            <div class="mb-3">
                                <label class="form-label fw-normal">Producto</label>
                                <input class="form-control" value="@Model.Detalle[i].Producto.Descripcion" disabled readonly>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-normal">Cantidad</label>
                                    <input type="number" class="form-control" name="Detalle[@i].Cantidad"
                                        value="@Model.Detalle[i].Cantidad" min="1" required>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-normal">Precio Unitario</label>
                                    <input type="text" class="form-control" value="$ @Model.Detalle[i].Producto.Precio" disabled
                                        readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    No hay productos cargados en este presupuesto.
                </div>
            }

            <div class="d-flex justify-content-end gap-2 mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg"></i> Guardar Cambios
                </button>
                <a asp-controller="Presupuestos" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-lg"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}