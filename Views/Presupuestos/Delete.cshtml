@{
    ViewData["Title"] = "Eliminar Presupuesto";
}

@model Presupuesto

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm border-danger" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-danger text-white">
            <h5 class="card-title m-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación</h5>
        </div>
        <div class="card-body">
            <h4 class="text-center mb-4">¿Estás seguro de que deseas eliminar este presupuesto?</h4>
            
            <div class="alert alert-warning text-center">
                <p class="mb-1"><strong>Esta acción no se puede deshacer.</strong></p>
                <p class="mb-0">Se eliminarán el presupuesto y todos sus productos asociados.</p>
            </div>

            <dl class="row border p-3 rounded bg-light mx-1">
                <dt class="col-sm-4 text-end">Destinatario:</dt>
                <dd class="col-sm-8 fw-bold">@Model.NombreDestinatario</dd>

                <dt class="col-sm-4 text-end">Fecha:</dt>
                <dd class="col-sm-8">@Model.FechaCreacion.ToString("dd/MM/yyyy")</dd>

                @if(Model.Detalle != null)
                {
                    <dt class="col-sm-4 text-end">Productos:</dt>
                    <dd class="col-sm-8">@Model.Detalle.Count items</dd>
                }
            </dl>

            <form asp-action="Delete" method="post" class="d-flex justify-content-center gap-2 mt-4">
                <input type="hidden" asp-for="IdPresupuesto" />
                
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Eliminar Definitivamente
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    Cancelar
                </a>
            </form>
        </div>
    </div>
</div>